namespace sys.core;

enum LineAlignment {
	Left,
	Center,
	Right
}

class OutputFormat {
	val Base = 10u;
	val Width = 0u;
	val Align = LineAlignment.Right;
	val FillBefore = ' ';
	val FillAfter = ' ';
	val ForceSign = false;
	
	property def Fill(value: Char) {
	    FillBefore = value;
	    FillAfter = value;
	}
}