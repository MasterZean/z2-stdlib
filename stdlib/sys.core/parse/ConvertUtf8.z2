		val back = data;
		if (back < 0)
			back = -back;
		
		val exp = -Int{Double{back}.Log10}.Clamped(Double.MinExpBase10, Double.MaxExpBase10);
					
		back = Float{back * 10.0.Pow(exp)};
		if (back >= 10) {
