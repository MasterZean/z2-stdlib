		else if (data == -Double.Infinite) {
			if (buffer.Length < 4)
				throw sys.core.BufferOverflowException{};
			
			buffer[0] = Byte{'-'};
			buffer[1] = Byte{'I'};
			buffer[2] = Byte{'n'};
			buffer[3] = Byte{'f'};
			buffer.Length = 4;
			
			return;
