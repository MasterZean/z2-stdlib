	static func ParseSig<T: Class>(ref buffer: Slice<Byte>): T {
		val value = T{};
		val i = 0p;
		val sign = 1;
		while (i < buffer.Length && buffer[i] <= ' ')
			i++;
		
		if (i >= buffer.Length)
			throw sys.core.BufferOverflowException{};
			
		if (buffer[i] == '+')
			i++;
		else if (buffer[i] == '-') {
			i++;
			sign = -1;
		}
		
		if (i >= buffer.Length)
			throw sys.core.BufferOverflowException{};
			
		if (!Char{buffer[i]}.IsAsciiDigit)
			throw sys.core.IllegalArgumentException{};
	
		while (i < buffer.Length && Char{buffer[i]}.IsAsciiDigit) {
			value = value * 10 + buffer[i] - T{'0'};
			i++;
		}
		
		buffer.Length = i;

		return value * sign;
	}
	
