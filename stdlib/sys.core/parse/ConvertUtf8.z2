	static func AsTextFix<B: Class>(ref buffer: Slice<Byte>, val data: Double, digitLimit: DWord) {
		if (data == 0) {
			if (buffer.Length < 3)
				throw sys.core.BufferOverflowException{};
				
			buffer[0] = Byte{'0'};
			buffer[1] = Byte{'.'};
			buffer[2] = Byte{'0'};
			buffer.Length = 3;
			
			return;
		}

		val si = 0p;
		if (data < 0) {
			if (buffer.Length < 1)
				return;
			buffer[0] = Byte{'-'};
			si = 1;
			data = -data;
		}

		val exp = -Int{data.Log10}.Clamped(Double.MinExpBase10, Double.MaxExpBase10);
		data *= 10.0.Pow(exp);
		if(data >= 10) {
			data /= 10;
			exp--;
		}
		else if(data < 1) {
			data *= 10;
			exp++;
		}
		exp = -exp;
		
		val n = 0p;
		val digits = digitLimit;
		val datap = data;
		val pp = B{};
		while (digits > 0) {
			val pp2 = B{datap};
			datap *= 10;
			if (pp2 < pp)
				break;
			pp = pp2;
			digits--;
		}

		val temp: CArray<Byte, 315> = void;
		val tempSlice = Slice<Byte>{temp};
		if (B.class == Long)
			LongAsText(tempSlice, pp);
		else
			IntAsText(tempSlice, Int{pp});

		val rn = 0p;

		if (exp < 0) {
			exp = -exp;
			val pexp = exp - 1;
			if (buffer.Length < si + n + 1)
				return;
			buffer[si + n] = Byte{'0'};
			n++;
			buffer[si + n] = Byte{'.'};
			n++;
			while (pexp > 0) {
				if (buffer.Length < si + n)
					return;
				buffer[si + n] = Byte{'0'};
				n++;
				pexp--;
			}
		}
		else {
			val readLimit = DWord{exp} + 1;
			val minLimit = Intrinsic.Min(readLimit, DWord{tempSlice.Length});
			while (n < minLimit) {
				if (buffer.Length < si + n)
					return;
				buffer[si + n] = temp[rn];
				n++;
				rn++;
			}
			while (n < readLimit) {
				buffer[si + n] = Byte{'0'};
				n++;
				rn++;
			}
			if (buffer.Length < si + n)
				return;
			buffer[si + n] = Byte{'.'};
			n++;
		}

		val c = tempSlice.Length - 1;
		while (c > 0) {
			if (temp[c] == Byte{'0'})
				tempSlice.Length = tempSlice.Length - 1;
			else
				break;
			c--;
		}

		if (rn >= tempSlice.Length) {
			if (sys.core.Compiler.@DEBUG && buffer.Length < si + n) {
				throw sys.core.BufferOverflowException{};
			}
			buffer[si + n] = Byte{'0'};
			n++;
		}
		else
			while (rn < tempSlice.Length) {
				if (buffer.Length < si + n)
					return;
				buffer[si + n] = temp[rn];
				n++;
				rn++;
				if (rn > digitLimit) {
					// round
					// if (rn < tempSlice.Length && temp[rn] > Byte{'4'})
					//	buffer[si + n - 1]++;
					break;
				}
			}

		buffer.Length = si + n;
	}
	
	static func AsTextExp<B: Class>(ref buffer: Slice<Byte>, val data: Double, digitLimit: DWord) {
		if (data == 0) {
			if (buffer.Length < 5)
				throw sys.core.BufferOverflowException{};
				
			buffer[0] = Byte{'0'};
			buffer[1] = Byte{'.'};
			buffer[2] = Byte{'0'};
			buffer[3] = Byte{'e'};
			buffer[4] = Byte{'0'};
			buffer.Length = 5;
			
			return;
		}

		val si = 0p;
		if (data < 0) {
			if (buffer.Length < 1)
				return;
			buffer[0] = Byte{'-'};
			si = 1;
			data = -data;
		}

		// compute exact exponent
		val exp = -Int{data.Log10}.Clamped(Double.MinExpBase10, Double.MaxExpBase10);
		data *= 10.0.Pow(exp);
		if(data >= 10) {
			data /= 10;
			exp--;
		}
		else if(data < 1) {
			data *= 10;
			exp++;
		}
		exp = -exp;
		
		val n = 0p;
		val digits = digitLimit;
		val datap = data;
		val pp = B{};
		while (digits > 0) {
			val pp2 = B{datap};
			datap *= 10;
			if (pp2 < pp)
				break;
			pp = pp2;
			digits--;
		}

		val temp: CArray<Byte, 315> = void;
		val tempSlice = Slice<Byte>{temp};
		if (B.class == Long)
			LongAsText(tempSlice, pp);
		else
			IntAsText(tempSlice, Int{pp});

		val rn = 0p;
		
		buffer[si + n] = temp[rn];
		n++;
		rn++;
		buffer[si + n] = Byte{'.'};
		n++;
		
		val c = tempSlice.Length - 1;
		while (c > 0) {
			if (temp[c] == Byte{'0'})
				tempSlice.Length = tempSlice.Length - 1;
			else
				break;
			c--;
		}
		
		val readLimit = DWord{tempSlice.Length};//exp < 0 ? (DWord{-exp} + 1) : (DWord{exp} + 1);
		val minLimit = Intrinsic.Min(readLimit, DWord{tempSlice.Length});
		while (rn < minLimit) {
			if (buffer.Length < si + n)
				return;
			buffer[si + n] = temp[rn];
			n++;
			rn++;
		}
		
		if (minLimit == 1) {
			buffer[si + n] = Byte{'0'};
			n++;
		}
		
		if (buffer.Length < si + n)
			return;
		
		buffer[si + n] = Byte{'e'};
		n++;
		
		val tempSlice2 = Slice<Byte>{buffer, PtrSize{si + n}, 5p};
		IntAsText(tempSlice2, exp);
		
		n += tempSlice2.Length;
		
		buffer.Length = si + n;
	}
