			temp[0] = Byte{'-'};
			start = 1;
			value = QWord{-data};
		}
		else {
			start = 0;
			value = QWord{data};
		}

		val n = start;
		while (value != 0) {
			val rem = value & 0xF;
			temp[n] = Byte{bases[rem]};
			value = value >> 4;
			n++;
		}
		
		if (buffer.Length < n)
			throw sys.core.BufferOverflowException{};

		buffer[0] = temp[0];
		
		val end = n - 1;
		for (val i = 0p; i <= end; i++)
			buffer[start + i] = temp[end - i];

		buffer.Length = n;
	}
	
