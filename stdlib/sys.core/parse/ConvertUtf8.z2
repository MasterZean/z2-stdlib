		else if(back < 1) {
			back *= 10;
			exp++;
		}
		exp = -exp;
		
		if (exp.Abs < 9)
			AsTextFix<Int>(buffer, data, 7);
		else
			AsTextExp<Int>(buffer, data, 7);
	}

